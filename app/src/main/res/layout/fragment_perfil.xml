<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.fragment.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--
        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="@dimen/image_card_size"
            android:layout_height="@dimen/image_card_size"
            android:src="@drawable/dog01"
            android:layout_gravity="center_horizontal"
            />-->

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fotoPerfil"
            android:layout_width="@dimen/image_card_size"
            android:layout_height="@dimen/image_card_size"
            android:src="@drawable/dog01"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tvNombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pnombre"
            android:textSize="@dimen/texto_cardview"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding_nombre_cardview"
            android:paddingRight="@dimen/padding_nombre_cardview"
            android:layout_gravity="center_horizontal"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</FrameLayout>
